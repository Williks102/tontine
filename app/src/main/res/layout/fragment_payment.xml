
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tv_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/effectuer_paiement"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Montant -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_tontine_green"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_amount_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/montant_a_payer"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:alpha="0.9"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="5 500 FCFA"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tv_amount_label"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_formule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Mini Pro"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    app:layout_constraintTop_toBottomOf="@id/tv_amount"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Méthodes de Paiement -->
        <TextView
            android:id="@+id/tv_payment_methods_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/choisir_methode_paiement"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_light"
            app:layout_constraintTop_toBottomOf="@id/card_amount"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Flutterwave -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_flutterwave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_methods_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_flutterwave"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_flutterwave"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_flutterwave_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Flutterwave"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    app:layout_constraintTop_toTopOf="@id/iv_flutterwave"
                    app:layout_constraintStart_toEndOf="@id/iv_flutterwave"
                    app:layout_constraintEnd_toStartOf="@id/radio_flutterwave" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/carte_mobile_money"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light"
                    app:layout_constraintTop_toBottomOf="@id/tv_flutterwave_title"
                    app:layout_constraintStart_toEndOf="@id/iv_flutterwave"
                    app:layout_constraintEnd_toStartOf="@id/radio_flutterwave"
                    app:layout_constraintBottom_toBottomOf="@id/iv_flutterwave" />

                <RadioButton
                    android:id="@+id/radio_flutterwave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:layout_constraintTop_toTopOf="@id/iv_flutterwave"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/iv_flutterwave" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Paystack -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_paystack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/card_flutterwave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_paystack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_paystack"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/tv_paystack_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Paystack"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    app:layout_constraintTop_toTopOf="@id/iv_paystack"
                    app:layout_constraintStart_toEndOf="@id/iv_paystack"
                    app:layout_constraintEnd_toStartOf="@id/radio_paystack" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/carte_bancaire_mobile"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_light"
                    app:layout_constraintTop_toBottomOf="@id/tv_paystack_title"
                    app:layout_constraintStart_toEndOf="@id/iv_paystack"
                    app:layout_constraintEnd_toStartOf="@id/radio_paystack"
                    app:layout_constraintBottom_toBottomOf="@id/iv_paystack" />

                <RadioButton
                    android:id="@+id/radio_paystack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/iv_paystack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/iv_paystack" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Résumé -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_paystack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tv_summary_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resume_paiement"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="@color/divider_color"
                    app:layout_constraintTop_toBottomOf="@id/tv_summary_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_summary_formule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/formule"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_summary_formule_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mini Pro"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    app:layout_constraintTop_toTopOf="@id/tv_summary_formule"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_summary_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/montant"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    app:layout_constraintTop_toBottomOf="@id/tv_summary_formule"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_summary_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 500 FCFA"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    app:layout_constraintTop_toTopOf="@id/tv_summary_amount"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tv_summary_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/methode"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary_light"
                    app:layout_constraintTop_toBottomOf="@id/tv_summary_amount"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/tv_summary_method_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flutterwave"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary_light"
                    app:layout_constraintTop_toTopOf="@id/tv_summary_method"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/card_summary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Bouton Payer -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pay"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:text="@string/payer_maintenant"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/tontine_green"
            app:cornerRadius="28dp"
            app:icon="@drawable/ic_payment"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/progress_payment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>